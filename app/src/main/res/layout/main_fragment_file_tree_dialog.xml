<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground"
    android:orientation="vertical">
    <TableLayout
        android:layout_above="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:weightSum="10">

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/sys_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:labelFor="@+id/txtTitle"/>
            <EditText
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:inputType="text"
                android:autofillHints="@string/sys_title" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/media_general_category"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:labelFor="@+id/txtCategory"/>
            <AutoCompleteTextView
                android:id="@+id/txtCategory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:inputType="text"
                android:autofillHints="@string/media_general_category" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/media_general_tags"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:labelFor="@+id/txtTags"/>
            <MultiAutoCompleteTextView
                android:id="@+id/txtTags"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:inputType="text"
                android:autofillHints="@string/media_general_tags" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/sys_description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:labelFor="@+id/txtDescription"/>
            <EditText
                android:id="@+id/txtDescription"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:inputType="textMultiLine"
                android:autofillHints="@string/sys_description" />
        </TableRow>
        <TableRow android:id="@+id/rowFileIV">
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="10"
                android:contentDescription="@string/file_tree_embed"/>
        </TableRow>
        <TableRow android:id="@+id/rowFileButtons">
            <ImageButton
                android:id="@+id/cmdImageAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                app:srcCompat="@drawable/icon_file"
                android:layout_margin="2dp"
                android:contentDescription="@string/file_tree_embed"/>
            <CheckBox
                android:id="@+id/chkImageEmbed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:text="@string/file_tree_embed"
                android:textSize="16sp"
                android:textStyle="bold"
                android:autofillHints="@string/file_tree_embed" />
        </TableRow>
        <TableRow android:id="@+id/rowNodeGallery">
            <CheckBox
                android:id="@+id/chkNodeGallery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:text="@string/file_tree_gallery"
                android:textSize="16sp"
                android:textStyle="bold"
                android:autofillHints="@string/file_tree_gallery" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="12"
        android:background="@color/colorAccent">
        <ImageButton
            android:id="@+id/cmdDelete"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/icon_delete"
            android:background="@null"
            android:layout_margin="2dp"
            android:contentDescription="@string/file_tree_embed"/>
        <ImageButton
            android:id="@+id/cmdSave"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/icon_save"
            android:background="@null"
            android:layout_margin="2dp"
            android:contentDescription="@string/file_tree_embed"/>
        <ImageButton
            android:id="@+id/cmdCancel"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/icon_cancel"
            android:background="@null"
            android:layout_margin="2dp"
            android:contentDescription="@string/file_tree_embed"/>
    </LinearLayout>
</RelativeLayout>